@model Color

@{
    ViewData["Title"] = "Edit-" + Model.ColorName;
}
<div class="card">
    <div class="card-header d-flex justify-content-center">
        <h3 class="">Cập nhật màu sắc: @Model.ColorName</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Color" asp-action="Edit" method="post" class="form-control" enctype="multipart/form-data">
            <input name="id" type="hidden" value="@Model.Id" class="col-lg-9 col-md-9 col-sm-9 p-0" />

            <div class="row m-3">
                <label for="ColorName" class="col-form-label col-sm-4">Tên màu sắc</label>
                <div class="col-sm-8">
                    <input name="ColorName" type="text" class="form-control" value="@Model.ColorName" />
                </div>
            </div>
            <div class="row m-3">
                <label for="ImageFile" class="col-form-label col-sm-4">Ảnh màu sắc</label>
                <div class="col-sm-8">
                    <input name="ImageFile" type="file" accept="image/*" class="form-control" />
                    <img src="@("/image/"+ Model.ColorImage)" width="40" height="40" style="margin: 5px;" />
                </div>
            </div>
            <div class="row m-3 justify-content-center">
                <input type="submit" name="submit" value="Thêm" class="btn btn-primary col-3 m-2" />
                <a asp-action="Index" class="btn btn-danger col-3 m-2">Hủy</a>

            </div>
        </form>

    </div>
</div>