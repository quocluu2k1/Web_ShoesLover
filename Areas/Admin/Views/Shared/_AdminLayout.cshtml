<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin ShoesLover</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--Data table jquery css-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/rowreorder/1.2.8/css/rowReorder.dataTables.min.css">
    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />    <!-- custom stylesheet -->
    <link rel="stylesheet" href="~/css/adminStyle.css" type="text/css">
</head>
<body>
    <div class="body-overlay"></div>

    <!-- sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h3><img src="https://png.pngtree.com/png-vector/20190330/ourmid/pngtree-vector-shoes-icon-png-image_892571.jpg" alt="Brand image" class="img-fluid" /><span>Shoes Picker</span></h3>
        </div>
        <ul class="list-unstyled components">
            <li>
                <a asp-controller="Home" asp-action="Index"><i class="fas fa-columns"></i> <span>Trang chủ</span></a>
            </li>
            <li>
                <a asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> <span>Quản lý khách hàng</span></a>
            </li>
            <li>
                <a asp-controller="Product" asp-action="Index"><i class="fas fa-shoe-prints"></i> <span>Quản lý sản phẩm</span></a>
            </li>
            <li>
                <a asp-controller="Comment" asp-action="Index"><i class="fas fa-comments"></i> <span>Quản lý bình luận</span></a>
            </li>
            <li>
                <a asp-controller="Category" asp-action="Index"><i class="fas fa-sitemap"></i> <span>Quản lý danh mục</span></a>
            </li>
            <li>
                <a asp-controller="Color" asp-action="Index"><i class="fas fa-palette"></i> <span>Quản lý màu sắc</span></a>
            </li>
            <li>
                <a asp-controller="Size" asp-action="Index"><i class="fas fa-ruler-combined"></i> <span>Quản lý kích thước</span></a>
            </li>
            <li>
                <a asp-controller="Order" asp-action="Index"><i class="fas fa-columns"></i> <span>Quản lý đơn hàng</span></a>

            </li>
          <!--  <li>
                <a asp-controller="Coupon" asp-action="Index"><i class="fas fa-columns"></i> <span>Quản lý mã giảm giá</span></a>

            </li>  -->
            <li>
                <a asp-controller="Brand" asp-action="Index"><i class="fas fa-tags"></i> <span>Quản lý nhãn hiệu</span></a>
            </li>
            <li>
                <a asp-controller="Analysis" asp-action="Index"><i class="fas fa-columns"></i> <span>Thống kê</span></a>
            </li>
            @* Display for mobile screen only *@
            @if (User.Identity.IsAuthenticated)
            {
                <li class="d-lg-none">
                    <a href="#"><i class="fas fa-sign-out-alt"></i><span>Log out</span></a>
                </li>

            }
            @* Display for mobile screen only *@
        </ul>
    </nav>


    <div id="content">
        <!-- top navbar -->
        <div class="top-navbar">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <button type="button" id="sidebar-resize" class="d-xl-block d-lg-block d-md-mone d-none">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <a href="#" class="navbar-brand">Trang quản trị ShoeLover</a>
                    <button class="d-inline-block d-lg-none ml-auto more-button" id="sidebar-collapse" type="button" data-toggle="collapse"
                            data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle">
                        <i class="fas fa-bars fa-2x"></i>
                    </button>

                    <div class="collapse navbar-collapse d-flex flex-row-reverse d-lg-block d-xl-block d-sm-none d-md-none d-none" id="navbar-collapse">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-item nav-link" href="#" data-toggle="dropdown">
                                    <i class="fas fa-bell"></i>
                                    @*<span class="notification">4</span>*@
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="#">Message 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Message 2</a>
                                    </li>
                                    <li>
                                        <a href="#">Message 3</a>
                                    </li>
                                    <li>
                                        <a href="#">Message 4</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-user-shield"></i>
                                </a>
                                @*<ul class="dropdown-menu">
                                    <li>
                                        <a href="#">Logout</a>
                                    </li>
                                </ul>*@
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a asp-action="LogOut" asp-controller="Account" class="nav-link"><i class="fas fa-sign-out-alt"></i><span>Log out</span></a>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <!-- main content -->
        <div class="main-content">
            <div class="row">
                @RenderBody()
            </div>
        </div>

    </div>
    @if (TempData["message"] != null)
    {
        <div class="position-fixed bottom-0 end-0 p-3 border-dark" style="z-index: 22">
            <div id="message" class="toast "
                 style="z-index: 22"
                 role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <i class="fas fa-bell" style="color:dodgerblue"></i>   
                    <b>Thông báo</b>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>

                </div>
                <div class="d-flex">
                    <div class="toast-body">
                        @(" " + TempData["message"])
                    </div>
                </div>
            </div>
        </div>

    }

    <!--jquery cdn load-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!--bootstrap cdn load-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script>
        //message toast
        $(document).ready(function () {
            try {
                var liveToast = $('#message');
                if (liveToast) {
                    var toast = new bootstrap.Toast(liveToast)
                    toast.show()
                }
            }
            catch (e) {
                //console.log("is null of message ", e)
            }
        })
    </script>

    <script type="text/javascript">
        $(document).ready(() => {
            $("#sidebar-resize").on('click', () => {
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
                var button = $("#sidebar-resize i");
                button.toggleClass("fa-chevron-left");
                button.toggleClass("fa-chevron-right");
            });
            $(".more-button,.body-overlay").on("click", () => {
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            })
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>


