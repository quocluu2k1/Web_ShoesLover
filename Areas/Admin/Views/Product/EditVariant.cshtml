@model ProductColorVariant
@{
}
<div class="card">
    <div class="card-header d-flex justify-content-center">
        <h3 class="">Cập nhật biến thể màu</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Product" asp-action="EditVariant" method="post" class="form-control" enctype="multipart/form-data">
            <input name="ProductId" type="hidden" class="col-lg-9 col-md-9 col-sm-9 p-0" value="@Model.ProductId" />
            <input name="ColorId" type="hidden" class="col-lg-9 col-md-9 col-sm-9 p-0" value="@Model.ColorId" />
            <div class="row m-3">
                <label for="ColorId" class="col-form-label col-sm-4">Chọn màu sắc</label>
                <div class="col-sm-8">
                    <select name="ColorId" class="form-control" disabled>
                        <option value="@Model.ColorId" selected>@ViewBag.ColorName</option>
                    </select>
                </div>
            </div>
            <div class="row m-3">
                <label for="ImageFile" class="col-form-label col-sm-4">Ảnh biến thể sản phẩm</label>
                <div class="col-sm-8">
                    <input name="ImageFile" type="file" accept="image/*" class="form-control" />
                    <img src="@("/image/"+ Model.ProductVariantImage)" max-width="300" max-height="300" style="margin: 5px;" />
                </div>
            </div>
            <div class="row m-3 justify-content-center">
                <input type="submit" name="submit" value="Sửa" class="btn btn-primary col-3 m-2" />
                <a asp-action="ProductDetails" asp-route-id="@Model.ProductId" class="btn btn-danger col-3 m-2">Hủy</a>
            </div>
        </form>

    </div>
</div>